<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 建立类与表的映射 -->
    <class name="model.PArt" table="part">
        <!-- 建立类中的属性与表中的主键对应 -->
        <id name="ID" column="ID" >
            <generator class="assigned"/>
        </id>

        <!-- 建立类中的普通的属性和表的字段的对应 -->
        <property name="teacherId" column="teacherId"/>
        <property name="Name" column="name" />
        <property name="Sex" column="Sex"/>
        <property name="Kind" column="Kind"/>
        <property name="Education" column="Education"/>
        <property name="Job" column="Job"/>
        <property name="Unit" column="Unit"/>
        <property name="Contribution" column="Contribution"/>
    </class>
</hibernate-mapping>