<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 建立类与表的映射 -->
    <class name="model.LunWen" table="lunwen">
        <!-- 建立类中的属性与表中的主键对应 -->
        <id name="Title" column="Title" >
            <generator class="assigned"/>
        </id>

        <!-- 建立类中的普通的属性和表的字段的对应 -->
        <property name="teacherId"/>
        <property name="Kind"/>
        <property name="STime"/>
        <property name="PublicationName"/>
        <property name="Collection"/>
        <property name="Unit"/>
        <property name="StudyType"/>
        <property name="OneStudy"/>
        <property name="ProjectSource"/>
        <property name="Count"/>
        <property name="School"/>
        <property name="PublicationLevel"/>
        <property name="IfTranslation"/>
        <property name="CN"/>
        <property name="PublicationRange"/>
    </class>
</hibernate-mapping>