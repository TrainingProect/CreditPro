<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 建立类与表的映射 -->
    <class name="model.Book" table="book">
        <!-- 建立类中的属性与表中的主键对应 -->
        <id name="teacherId" column="teacherId" >
            <generator class="assigned"/>
        </id>

        <!-- 建立类中的普通的属性和表的字段的对应 -->
        <property name="Name"/>
        <property name="Unit"/>
        <property name="PublishUnit"/>
        <property name="Sp"/>
        <property name="Kind"/>
        <property name="StudyType"/>
        <property name="OneStudy"/>
        <property name="ProjectSource"/>
        <property name="Count"/>
        <property name="IfTranslation"/>
        <property name="School"/>
        <property name="Language"/>
        <property name="ISBN"/>
        <property name="CIP"/>
        <property name="Level"/>
        <property name="IfAid"/>
        <property name="Introduction"/>
        <property name="StartTime"/>

    </class>
</hibernate-mapping>