<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 建立类与表的映射 -->
    <class name="model.Award" table="award">
        <!-- 建立类中的属性与表中的主键对应 -->
        <id name="AwardID" column="AwardID">
            <generator class="assigned"/>
        </id>

        <!-- 建立类中的普通的属性和表的字段的对应 -->
        <property name="AwardName"/>
        <property name="ResultName"/>
        <property name="Unit"/>
        <property name="AwardNumber"/>
        <property name="AwardTime"/>
        <property name="Department"/>
        <property name="Level1"/>
        <property name="Level2"/>
        <property name="CompleteUnit"/>
        <property name="CompleteNumber"/>
        <property name="UnitLevel"/>
        <property name="teacherId" />
        <property name="StudyType"/>
        <property name="OneStudy"/>
        <property name="ProjectSource"/>
        <property name="Kind1"/>
        <property name="Kind2"/>
        <property name="Award"/>
    </class>
</hibernate-mapping>