<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 建立类与表的映射 -->
    <class name="model.RRule" table="rrule">
        <!-- 建立类中的属性与表中的主键对应 -->
        <id name="Name" column="Name" >
            <generator class="assigned"/>
        </id>

        <!-- 建立类中的普通的属性和表的字段的对应 -->
        <property name="Id" column="Id"/>
        <property name="Kind" column="Kind"/>
        <property name="Unit" column="Unit"/>
        <property name="teacherId" column="teacherId"/>
        <property name="STime" column="STime"/>
        <property name="ETime" column="ETime"/>
        <property name="IfExist" column="IfExist"/>
        <property name="Deparment" column="Deparment"/>
        <property name="Industry" column="Industry"/>
    </class>
</hibernate-mapping>