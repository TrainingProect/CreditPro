<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 建立类与表的映射 -->
    <class name="model.PBook" table="pbook">
        <!-- 建立类中的属性与表中的主键对应 -->
        <id name="ID" column="ID" >
            <generator class="assigned"/>
        </id>

        <!-- 建立类中的普通的属性和表的字段的对应 -->
        <property name="Name"/>
        <property name="teacherId" />
        <property name="Sex"/>
        <property name="Kind" />
        <property name="Education"/>
        <property name="Job" />
        <property name="Unit"/>
        <property name="WRole" />
        <property name="Count" />
        <property name="Contribution" />
    </class>
</hibernate-mapping>